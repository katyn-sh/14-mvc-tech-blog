<div class="container">
    <div class="row">
        <h2>Create New Post</h2><br>

        <form class="new-post-form">
            <div>
                <label for="post-title">Post Title</label>
                <input class="form-control" type="text" id="post-title" name="post-title" />
            </div>
            <div>
                <label for="post-text">Post Content</label>
                <textarea class="form-control" id="post-text" name="post-text"></textarea>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Upload post banner</label>
                <input class="form-control" type="file" id="formFile">
            </div>
            <button type="submit" class="btn btn-warning">Create your Post</button>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#if posts.length}}
        <section>
            <br>
            <h3>Your Posts</h3>
            <ol>
                {{#each posts as |post|}}
                <div>
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-warning mb-3">Edit Post</a>
                </div>
                {{/each}}
            </ol>
        </section>
        {{/if}}
    </div>
</div>

<script src="/js/add-post.js"></script>